<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<PdfDocument>
    <Page>
        <Paragraph bold="true">Bold Text</Paragraph>
        <Paragraph italic="true">Italic text</Paragraph>
        <Paragraph underline="true">Underline text</Paragraph>
        <Paragraph underline="true" foreground="red">Underline Red text</Paragraph>
        <Paragraph>
            <Text>This is paragraph</Text>
            <Text foreground="blue">(added text from &lt;Text&gt; tag)</Text>
            <Text>text</Text>
        </Paragraph>

        <Table columnCount="3">
            <TableRow>
                <Cell borders="1;solid;red">
                    <Paragraph>1</Paragraph>
                </Cell>
                <Cell borders="1;dashed;red">
                    <Paragraph bold="true">2</Paragraph>
                </Cell>
                <Cell borders="1;dotted;red">
                    <Paragraph textAlign="center">3</Paragraph>
                </Cell>
            </TableRow>
            <TableRow bold="true" textAlign="right">
                <Cell>
                    <Paragraph bold="false">4</Paragraph>
                </Cell>
                <Cell>
                    <Paragraph textAlign="center">5</Paragraph>
                </Cell>
                <Cell>
                    <Paragraph>6</Paragraph>
                </Cell>
            </TableRow>
            <TableRow borders="2,solid,blue,1.0">
                <Cell>
                    <Paragraph>7</Paragraph>
                </Cell>
                <Cell>
                    <Paragraph>8</Paragraph>
                </Cell>
                <Cell>
                    <Paragraph>9</Paragraph>
                </Cell>
            </TableRow>
        </Table>

    </Page>
</PdfDocument>